{
  "scripts": {
    "test": "mocha --recursive",
    "lint": "eslint src",
    "build": "esbuild --bundle src/opentype.js --outdir=dist --sourcemap --external:fs --format=esm",
    "start": "esbuild --bundle src/opentype.js --outdir=dist --sourcemap --external:fs --format=esm --serve",
    "watch": "esbuild --bundle src/opentype.js --outdir=dist --sourcemap --external:fs --format=esm --watch",
    "dist" : "esbuild --bundle src/opentype.js --outdir=dist --sourcemap --external:fs --format=esm --minify --out-extension:.js=.min.js"
  },
  "type": "module",
  "main": "dist/opentype.js",
  "module": "dist/opentype.js",
  "dependencies": {
  },
  "devDependencies": {
    "esbuild": "^0.17.7",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
